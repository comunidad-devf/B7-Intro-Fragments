<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_dragon_blanco"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="8dp"
        android:src="@drawable/dragon_blanco"
        android:scaleType="centerCrop"
        android:contentDescription="@string/dragon_blanco" />

    <ImageView
        android:id="@+id/img_mago_oscuro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="8dp"
        android:src="@drawable/mago_oscuro"
        android:scaleType="centerCrop"
        android:contentDescription="@string/mago_oscuro" />

    <ImageView
        android:id="@+id/img_dragon_negro"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dragon_negro"
        android:contentDescription="@string/dragon_negro" />


</LinearLayout>